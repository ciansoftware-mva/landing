---
import HamburguerIcon from "../assets/icons/hamburguer.svg";

const menuItems = ["Inicio", "Servicios", "Nosotros", "Contactanos"];
---

<header class="header">
  <div class="logo"></div>

  <!-- desktop -->
  <nav>
    <ul>
      {
        menuItems.map((item) => (
          <li>
            <a href="" class="nav-link hover-effect">
              {item}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  <!-- mobile -->
  <label for="menu"><HamburguerIcon width={24} height={24} /></label>
  <input type="checkbox" hidden name="menu" id="menu" />
  <aside id="sidebar">
    <ul>
      {
        menuItems.map((item) => (
          <li>
            <a href="" class="nav-link hover-effect">
              {item}
            </a>
          </li>
        ))
      }
    </ul>
  </aside>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const checkbox = document.getElementById("menu") as HTMLInputElement;
    const aside = document.getElementById("sidebar") as HTMLElement;

    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;

      if (target === checkbox) {
        return;
      }
      if (checkbox.checked && !aside.contains(target)) {
        checkbox.checked = false;
      }
    });
  });
</script>

<style>
  .header {
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    height: 80px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: var(--space-6);
    background-color: var(--bg-accent-color);
  }

  .logo {
    height: clamp(40px, 10vw, 80px);
    width: clamp(110px, 20vw, 130px);
    background-image: url("/Imagenes/logo-light.png");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  @media (prefers-color-scheme: dark) {
    .logo {
      background-image: url("/Imagenes/logo-dark.png");
    }
  }

  ul {
    display: flex;
    width: 100%;
    gap: var(--space-4);
  }

  nav ul {
    flex-direction: row;
  }

  aside {
    display: none;
    position: fixed;
    height: 100vh;
    padding: var(--space-7);
    top: 0%;
    right: 0%;
    text-align: right;
    background-color: var(--bg-accent-color);
    box-shadow: -5px -5px 15px 1px var(--bg-color);
    transform: translateX(110%);
    transition: transform var(--transition-duration);
  }

  label {
    color: var(--text-color);
    cursor: pointer;
    display: none;
  }

  input[type="checkbox"]:checked + aside {
    transform: translateX(0);
  }

  aside ul {
    flex-direction: column;
  }

  .nav-link {
    text-transform: uppercase;
    text-decoration: none;
    color: var(--text-color);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    padding: var(--space-unit) var(--space-2);
    position: relative;
    transition: color var(--transition-duration);
    font-size: clamp(1rem, 0.9rem, 2rem);
    padding: 6px 0;
  }

  .hover-effect:before,
  .hover-effect:after {
    content: "";
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--primary-color);
    transition:
      transform var(--transition-duration),
      opacity var(--transition-duration);
  }

  .hover-effect:before {
    top: 0;
    transform: scaleY(2);
    opacity: 0;
  }

  .hover-effect:after {
    bottom: 0;
    transform: scaleY(0);
    opacity: 0;
  }

  .hover-effect:hover {
    color: var(--primary-color);
  }

  .hover-effect:hover:before {
    transform: scaleY(1);
    opacity: 1;
  }

  .hover-effect:hover:after {
    transform: scaleY(1);
    opacity: 1;
  }

  @media (prefers-color-scheme: dark) {
    .logo {
      background-image: url("/Imagenes/logo-dark.png");
    }
  }

  /* MÃ“VIL (ancho <= 768px) */
  @media screen and (max-width: 768px) {
    .header nav {
      display: none;
    }

    .header aside {
      display: flex;
    }

    label {
      display: block;
    }
  }
</style>
