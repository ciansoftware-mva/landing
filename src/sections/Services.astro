---
import ServiceCard from "../components/services/ServiceCard.astro";
import AIImage from "../assets/cards/ai.jpg";
import WebPagesImage from "../assets/cards/web-pages.jpg";
import AuditoriesImage from "../assets/cards/auditories.jpg";
import MobileAppsImage from "../assets/cards/mobile-apps.jpg";
---

<h2>Servicios</h2>

<main>
  <ServiceCard
    title="Agentes de IA"
    description="Descripción de Agentes de IA"
    img={AIImage}
  />
  <ServiceCard
    title="Desarrollo Web"
    description="Descripción de Desarrollo Web"
    img={WebPagesImage}
  />
  <ServiceCard
    title="Desarrollo de Aplicaciones"
    description="Descripción de Desarrollo de Aplicaciones"
    img={MobileAppsImage}
  />
  <ServiceCard
    title="Análisis de Datos"
    description="Descripción de Análisis de Datos"
    img={AuditoriesImage}
  />
</main>

<style is:inline>
  main > article {
    flex-shrink: 0;
    position: relative;
    left: 50%;
    translate: -50% 0;
    scroll-snap-align: center;
    height: 250px;

    @media screen and (min-width: 640px) {
      position: static;
      left: 0;
      translate: 0;
      flex: 0 0 500px;
      height: 200px;
    }
  }
</style>
<style>
  h2 {
    color: var(--color-primary);
    font-size: var(--font-size-2xl);
    margin-bottom: 1rem;
    text-align: center;
  }

  main {
    display: flex;
    gap: var(--space-4);
    justify-content: start;
    align-items: center;
    overflow-x: scroll;
    padding-block: var(--space-8);
    scroll-snap-type: x mandatory;
    padding-inline: 50vw;

    @media screen and (min-width: 640px) {
      overflow: hidden;
      padding-inline: 0;
      justify-content: center;
      flex-wrap: wrap;
      max-width: var(--breakpoint-lg);
      margin-inline: auto;
      scroll-snap-type: none;
    }
  }

  main::-webkit-scrollbar {
    display: none; /* Chrome, Safari y Opera */
  }
</style>
